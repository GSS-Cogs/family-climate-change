{
    "$schema": "http://gss-cogs.github.io/family-schemas/dataset-schema-1.1.0.json",
    "id": "ons-energy-use-fossil-fuels-by-fuel-type-and-industry",
    "title": "Energy use: fossil fuels by fuel type and industry",
    "publisher": "Office for National Statistics",
    "description": "The UK's fuel use by industry (SIC 2007 group - around 130 categories) and type (coal, natural gas, petrol, diesel oil for road vehicles (DERV), fuel oil, gas oil, aviation fuel and other), 1990 to 2021. The dataset excludes biofuels and waste.",
    "landingPage": "https://www.ons.gov.uk/economy/environmentalaccounts/datasets/ukenvironmentalaccountsfuelusebytypeandindustry",
    "datasetNotes": [
        "On landing page scroll down to latest version."
    ],
    "published": "2023-06-05",
    "families": [
        "Climate-Change"
    ],
    "extract": {
        "source": "XLS",
        "stage": "Documented"
    },
    "transform": {
        "stage": [
            "Priority"
        ],
        "airtable": "recQtsEhPd3bumzx9",
        "main_issue": 70,
        "columns": {
            "Year": {
                "type": "dimension",
                "new": {
                    "subPropertyOf": "http://purl.org/linked-data/sdmx/2009/dimension#refPeriod",
                    "codelist": true
                },
                "value": "http://reference.data.gov.uk/id/year/{+year}"
            },
            "Section": {
                "type" : "dimension",
                "new": {
                    "codelist": "./codelists/section.csv-metadata.json"
                }
            },
            "Fuel": {
                "type": "dimension",
                "new": {
                    "codelist": "./codelists/fuel.csv-metadata.json"
                }
            },
            "Value": {
                "type": "observations",
                "measure": {
                    "label": "Energy Consumption"
                },
                "unit": {
                    "label": "Millions tonnes of oil equivalent (Mtoe)"
                }
            },
            "Marker": {
                "type": "attribute",
                "uri": "http://purl.org/linked-data/sdmx/2009/attribute#obsStatus",
                "value": "http://gss-data.org.uk/def/concept/cogs-markers/{marker}"
            }
        },
        "csvcubed_uri_style": "WithoutFileExtensions"
    },
    "sizingNotes": "Multiple tables, not as straightforward structure as could be and footnotes.",
    "notes": "Priority dataset for Climate Change Platform project."
}