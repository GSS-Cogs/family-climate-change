{
    "$schema": "http://gss-cogs.github.io/family-schemas/dataset-schema-1.1.0.json",
    "id": "beis-local-authority-greenhouse-gas-emissions",
    "title": "Local authority greenhouse gas emissions",
    "publisher": "Department for Business, Energy and Industrial Strategy",
    "description": "",
    "landingPage": "https://www.gov.uk/government/statistics/uk-local-authority-and-regional-greenhouse-gas-emissions-national-statistics-2005-to-2021",
    "datasetNotes": [
        "On the landing page, navigate down to the CSV file - 2005 to 2021 local authority greenhouse gas emissions dataset"
    ],
    "published": "2023-06-29",
    "families": [
        "Climate-Change"
    ],
    "extract": {
        "source": "CSV"
    },
    "transform": {
        "airtable": "recTOX5dAADKQYbY2",
        "main_issue": 760,
        "columns": {
            "Year": {
                "type": "dimension",
                "new": {
                    "subPropertyOf": "http://purl.org/linked-data/sdmx/2009/dimension#refPeriod",
                    "codelist": true
                },
                "value": "http://reference.data.gov.uk/id/year/{+year}"
            },
            "Country": {
                "type" : "dimension",
                "new": {
                    "subPropertyOf": "http://purl.org/linked-data/sdmx/2009/dimension#refArea",
                    "codelist": "./codelists/country.csv-metadata.json"
                },
                "value": "{+country}"
            },
            "Local Authority": {
                "type" : "dimension",
                "new": {
                    "subPropertyOf": "http://purl.org/linked-data/sdmx/2009/dimension#refArea",
                    "codelist": "./codelists/local-authority-code.csv-metadata.json"
                },
                "value": "{+local_authority}"
            },
            "LA GHG Sector": {
                "type": "dimension"
            },
            "LA GHG Sub-sector": {
                "type": "dimension"
            },
            "Greenhouse Gas": {
                "type": "dimension",
                "uri" : "http://gss-data.org.uk/def/climate-change/property/dimension/ghg",
                "value": "http://gss-data.org.uk/def/climate-change/concept/ghg/{+greenhouse_gas}"
            },
            "Measure": {
                "type": "measures"
            },
            "Unit": {
                "type": "units"
            },
            "Value": {
                "type": "observations"
            },
            "Marker": {
                "type": "attribute"
            }
        },
        "csvcubed_uri_style": "WithoutFileExtensions"
    },
    "sizingNotes": "",
    "notes": ""
}