{
    "$schema": "http://gss-cogs.github.io/family-schemas/dataset-schema-1.1.0.json",
    "id": "ons-atmospheric-emissions-greenhouse-gases-by-industry-and-gas",
    "title": "Atmospheric emissions: greenhouse gases by industry and gas",
    "publisher": "https://www.gov.uk/government/organisations/office-for-national-statistics",
    "description": "The emissions of carbon dioxide, methane, nitrous oxide, hydro-fluorocarbons, perfluorocarbons, sulphur hexafluoride, nitrogen trifluoride and total greenhouse gas emissions, by industry (SIC 2007 group - around 130 categories), UK.",
    "landingPage": "https://www.ons.gov.uk/economy/environmentalaccounts/datasets/ukenvironmentalaccountsatmosphericemissionsgreenhousegasemissionsbyeconomicsectorandgasunitedkingdom",
    "datasetNotes": [
        "On landing page scroll down to latest version."
    ],
    "published": "2023-06-05",
    "families": [
        "Climate-Change"
    ],
    "extract": {
        "source": "XLS",
        "stage": "Documented"
    },
    "transform": {
        "stage": [
            "Priority"
        ],
        "airtable": "recYQFAfkwLs49Tgn",
        "main_issue": 75,
        "columns": {
            "Year": {
                "type": "dimension",
                "new": {
                    "subPropertyOf": "http://purl.org/linked-data/sdmx/2009/dimension#refPeriod",
                    "codelist": true
                },
                "value": "http://reference.data.gov.uk/id/year/{+year}"
            },
            "Section": {
                "type" : "dimension",
                "new": {
                    "codelist": "./codelists/section.csv-metadata.json"
                }
            },
            "Emission Type": {
                "type": "dimension",
                "uri" : "http://gss-data.org.uk/def/climate-change/property/dimension/ghg",
                "value": "http://gss-data.org.uk/def/climate-change/concept/ghg/{emission_type}"
            },
            "Measure Type": {
                "type": "measures",
                "value": "http://gss-data.org.uk/def/climate-change/measure/{measure_type}"
            },
            "Unit": {
                "type": "units", 
                "value": "http://gss-data.org.uk/def/climate-change/concept/measurement-units/{units}"
            },
            "Value": {
                "type": "observations",
                "datatype": "decimal"
            }
        },
        "csvcubed_uri_style": "WithoutFileExtensions"
    },
    "sizingNotes": "Simple table structure and dimensions with some footnotes.",
    "notes": "Priority dataset for Climate Change Platform project."
}